<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>dist</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}</directory>
			<includes>
				<include>LICENSE</include>
			</includes>
			<excludes>
				<exclude>.*</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src</directory>
			<excludes>
				<exclude>.*</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/test-specifications</directory>
			<excludes>
				<exclude>.*</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<includes>
				<include>CommandUI</include>
				<include>CommandUI.exe</include>
			</includes>
			<excludes>
				<exclude>.*</exclude>
			</excludes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>${project.build.directory}/command-ui-${project.version}-jar-with-dependencies.jar</source>
			<outputDirectory>.</outputDirectory>
			<destName>${project.build.directory}/command-ui-crossPlatform.jar</destName>
		</file>
	</files>
</assembly>